<VendasOutroVendedorPage>
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        Label:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: 'icones/botao_fino.png'
            pos_hint: {"right": 0.85 , "top": 0.95 }
            size_hint: 0.7, 0.2
            bold: True
            text: 'Total de Vendas: '
            id: label_total_vendas
            markup: True

        # lista de vendas
        ScrollView:
            pos_hint: {"right": 1 , "top": 0.75 }
            size_hint: 1,0.6
            GridLayout:
                cols: 1
                id: lista_vendas
                #scroll na vertical segue sempre os cod abaixo
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True
                spacing: 2, 2

        #bot√£o voltar
        FloatLayout:
            pos_hint: {"right": 1 , "top": 0.15 }
            size_hint: 1,0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex('#006D7E')
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {"right": 0.2 , "top": 0.9 }
                size_hint: 0.2,0.8
                source: 'icones/voltar.png'
                on_release: app.sair_vendas('listarvendedorespage')
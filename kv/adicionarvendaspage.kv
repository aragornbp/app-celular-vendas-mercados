<AdicionarVendasPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        Label:
            pos_hint: {"right": 1 , "top": 1 }
            size_hint: 1, 0.05
            text: 'Selecione o Cliente'
            id: label_selecione_cliente
        ScrollView:
            pos_hint: {"right": 1 , "top": 0.95 }
            size_hint: 1,0.15
            GridLayout:
                rows: 1
                id: lista_clientes
                #scroll na horizontal segue sempre os cod abaixo
                size_hint_x: None
                width: self.minimum_width
                col_default_width: "100dp"
                col_force_default: True
        Label:
            pos_hint: {"right": 1 , "top": 0.75 }
            size_hint: 1, 0.05
            text: 'Selecione o Produto'
            id: label_selecione_produto
        ScrollView:
            pos_hint: {"right": 1 , "top": 0.7 }
            size_hint: 1,0.15
            GridLayout:
                rows: 1
                id: lista_produtos
                #scroll na horizontal segue sempre os cod abaixo
                size_hint_x: None
                width: self.minimum_width
                col_default_width: "100dp"
                col_force_default: True
        Label:
            pos_hint: {"right": 1 , "top": 0.5 }
            size_hint: 1, 0.05
            bold: True
            id: label_data
            text: 'Data: 01/01/2021'

        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: 'icones/botao.png' if self.state == "normal" else 'icones/botao_apertado.png'
            on_release: app.mudar_tela('homepage')
            text: 'Cancelar'
            pos_hint: {"right": 0.45, "top": 0.2}
            size_hint: 0.4, 0.2
        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: 'icones/botao.png' if self.state == "normal" else 'icones/botao_apertado.png'
            on_release: app.adicionar_venda()
            text: "Add Venda"
            pos_hint: {"right": 0.95, "top": 0.2}
            size_hint: 0.4, 0.2

        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9 , "top": 0.45 }
            size_hint: 0.8, 0.1
            LabelButton:
                text: "kg"
                id: unidades_kg
                on_release: app.selecionar_unidade('unidades_kg')
            LabelButton:
                text: "unidades"
                id: unidades_unidades
                on_release: app.selecionar_unidade('unidades_unidades')
            LabelButton:
                text: "litros"
                id: unidades_litros
                on_release: app.selecionar_unidade('unidades_litros')
        GridLayout:
            id: input_preco
            rows: 1
            pos_hint: {"right": 0.9 , "top": 0.355 }
            size_hint: 0.8, 0.075
            Label:
                text: "Preço Total (R$)"
            TextInput:
                id: preco_total
                hint_text: "Digite apenas números"

        GridLayout:
            id: input_quantidade
            rows: 1
            pos_hint: {"right": 0.9 , "top": 0.275 }
            size_hint: 0.8, 0.075
            Label:
                text: "Quantidade Total"
            TextInput:
                id: quantidade
                hint_text: "0"

